.gymusershow.user
  .title
    = @user.username
    %span.link= link_to "all users", users_path
    %span.link= link_to "all wods", wods_path

  .recent-wods
    .text 
      most recent wod
      - if @wod
        = " - added #{time_ago_in_words(@wod.created_at)} ago"
    - if @wod
      = render :partial => "shared/wod", :locals => { :wod => @wod }
    - else
      %i no wods yet!
