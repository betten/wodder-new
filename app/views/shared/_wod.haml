.wod{ :id => wod.id }
  .points
    - unless wod.has_point_from_user?(@current_user) and !@current_user.is_admin?
      .upvote= link_to 'â–²', up_vote_wod_path(wod)
    .count= wod.points
  .content
    - unless defined? hide_header and hide_header
      .header
        - if wod.is_a?(GymWod)
          = link_to wod.gym.name, gym_path(wod.gym)
        - elsif wod.is_a?(UserWod)
          = link_to wod.user.username, user_path(wod.user)
    .workout!= wod.workout
