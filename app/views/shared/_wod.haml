.wod{ :id => wod.id }
  .points
    - unless wod.has_point_from_user?(@current_user) and !@current_user.is_admin?
      .upvote= link_to 'â–²', up_vote_wod_path(wod)
    .count= wod.points
  .content
    - unless defined? hide_header and hide_header
      .header
        - if wod.is_a?(GymWod)
          = link_to wod.gym.name, gym_path(wod.gym)
        - elsif wod.is_a?(UserWod)
          %a{ :href => user_path(wod.user) }
            .sub posted by
            = wod.user.username

        - if wod.has_comments?
          = link_to wod.comments.count.to_s + ' comments', wod_path(wod), :class => "test"
        - else
          = link_to 'discuss', wod_path(wod), :class => "test"
    .workout!= wod.workout

:css
  .test {
    font-size: 11px;
    font-weight: normal;
  }
